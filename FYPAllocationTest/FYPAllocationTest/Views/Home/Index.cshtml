@model FYPAllocationTest.ViewModels.StudentViewModel
<!DOCTYPE html>
<html>
<head>
    <link href="~/css/style.css" rel="stylesheet" type="text/css" />
</head>

<body>
    <nav class="navbar bg-light ">
        <span class="navbar-brand  h1">FYP Allocation Portal</span>
    </nav>
    <div class="text-center ">

        @using (Html.BeginForm("Export_Supervisors", "Allocation", FormMethod.Post))
        {
            <input type="submit" id="btnSubmit" value="Export Supervisors" />
        }
        <br />
        @using (Html.BeginForm("Export_Students", "Allocation", FormMethod.Post))
        {
            <input type="submit" id="btnSubmit" value="Export Students" />
        }
        <br />
        @using (Html.BeginForm("FYPAlloc", "Allocation", FormMethod.Post))
        {
            <input class="btncustom btn-primary" type="submit" id="btnSubmit" value="Perform Allocation" />
        }
        <br />
        <a asp-controller="Allocation" asp-action="FormA" class="btncustom btn-primary">Student Form</a>
        <a asp-controller="Allocation" asp-action="StaffForm" class="btncustom btn-primary">Supervisor Form</a>

    </div>
</body>
</html>



